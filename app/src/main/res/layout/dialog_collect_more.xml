<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_dialog_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_dialog_cancel_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_save_bg"
            android:text="@string/my_collect_tab_1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size15"
            android:textStyle="bold"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_cancel_bg"
            android:text="@string/my_collect_tab_2"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_c99e5e"
            android:textSize="@dimen/text_size15"
            android:textStyle="bold"
            android:padding="15dp"
            />

    </LinearLayout>



</RelativeLayout>