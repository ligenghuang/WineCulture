<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginBottom="10dp"
    android:gravity="left|center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/item_height70"
        android:layout_height="@dimen/item_height70">

        <ImageView
            android:id="@+id/education_iv"
            android:layout_width="@dimen/item_height70"
            android:layout_height="@dimen/item_height70"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/education_iv_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_a1"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_confirmation_of_order_delete" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
