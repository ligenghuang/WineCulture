<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.my.ForgetPwdActivity">

    <include layout="@layout/layout_title_black_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_forget_pwd_moblie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_pwd_tab_9"
            android:textSize="@dimen/text_size15"
            android:background="@color/white"
            android:textStyle="bold"
            android:textColor="@color/color_15"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            />

        <View style="@style/line_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:background="@color/white"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:gravity="center_vertical"
            >


            <EditText
                android:id="@+id/et_forget_pwd_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size15"
                android:textStyle="bold"
                android:textColor="@color/color_15"
                android:hint="@string/pay_pwd_tab_10"
                android:background="@color/transparent"
                android:inputType="number"
                android:maxLength="6"
                />

            <TextView
                android:id="@+id/tv_forget_pwd_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_0048ff"
                android:textSize="@dimen/text_size15"
                android:text="@string/modify_mobile_tab_11"/>

        </LinearLayout>

        <View style="@style/line_4"/>

        <!--输入密码-->
        <EditText
            android:id="@+id/et_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="@string/pay_pwd_tab_11"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/color_15"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColorHint="@color/color_15"
            android:background="@color/white"/>

        <View style="@style/line_4"/>

        <!--确认密码-->
        <EditText
            android:id="@+id/et_forget_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:hint="@string/pay_pwd_tab_12"
            android:textSize="@dimen/text_size15"
            android:textColor="@color/color_15"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColorHint="@color/color_15"
            android:background="@color/white"/>

        <!--提交-->
        <TextView
            android:id="@+id/tv_forget_pwd_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/item_height50"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/pay_pwd_tab_6"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/shape_btn_save_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size15"/>


    </LinearLayout>


</LinearLayout>