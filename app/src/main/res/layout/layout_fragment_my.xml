<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/shape_my_top_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_id"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textSize="@dimen/text_size12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llInfo"
            android:layout_marginTop="-20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:contentPadding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMyOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@mipmap/icon_more"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:text="@string/my_myorder"
                        android:textSize="@dimen/text_size15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_e3c9a2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_obligation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_not_paying"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_obligation"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_4b2d10" />

                        <TextView
                            android:id="@+id/tv_toBeShipped"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_not_delive_goods"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_tobeshipped"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_4b2d10" />

                        <TextView
                            android:id="@+id/tv_toBeReceived"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_for_the_goods"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_tobereceived"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_4b2d10" />

                        <TextView
                            android:id="@+id/tv_toBeComment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_to_evaluate"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_tobecomment"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_4b2d10" />

                        <TextView
                            android:id="@+id/tv_service"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_after_sales"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_service"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:contentPadding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_memberCenter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_member_center"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="@string/my_membercenter"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:id="@+id/tv_myteam"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_my_team"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="@string/my_myteam"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:id="@+id/tv_popularize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_to_promote"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="@string/my_popularize"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/text_size12" />

                    <TextView
                        android:id="@+id/tv_proxy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_agency_appointment"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="@string/my_proxy"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/text_size12" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_booking_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/icon_my_booking_goods" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:contentPadding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:text="@string/my_myservice"
                        android:textSize="@dimen/text_size15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_e3c9a2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_myCollect"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_my_collection"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_mycollect"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <TextView
                            android:id="@+id/tv_myFootprint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_footprint"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_myfootprint"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <TextView
                            android:id="@+id/tv_myComments"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_my_evaluation"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_mycomments"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <TextView
                            android:id="@+id/tv_myAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_shipping_address"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_myaddress"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_aboutWineCulture"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/icon_about"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/my_aboutwineculture"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/text_size12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="3" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>