<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.my.PayPwdActivity">

    <include layout="@layout/layout_title_black_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_f2">


        <TextView
            android:id="@+id/tv_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_pwd_tab_1"
            android:textStyle="bold"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size15"
            android:drawableRight="@drawable/icon_more"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:paddingTop="15dp"
            android:paddingRight="24dp"
            android:paddingBottom="15dp"
            />

        <View style="@style/line_4"/>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_pwd_tab_2"
            android:textStyle="bold"
            android:textColor="@color/color_15"
            android:textSize="@dimen/text_size15"
            android:drawableRight="@drawable/icon_more"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:paddingTop="15dp"
            android:paddingRight="24dp"
            android:paddingBottom="15dp"
            />



    </LinearLayout>



</LinearLayout>