<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.my.MyOrderActivity">

    <include layout="@layout/layout_title_black_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAllOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_goods_text_bg"
                android:gravity="center"
                android:text="@string/my_allOrder"
                android:textColor="@color/selector_myorder" />

            <TextView
                android:id="@+id/tvObligation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_goods_text_bg"
                android:gravity="center"
                android:text="@string/my_obligation"
                android:textColor="@color/selector_myorder" />

            <TextView
                android:id="@+id/tvToBeShipped"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_goods_text_bg"
                android:gravity="center"
                android:text="@string/my_tobeshipped"
                android:textColor="@color/selector_myorder" />

            <TextView
                android:id="@+id/tvToBeReceived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_goods_text_bg"
                android:gravity="center"
                android:text="@string/my_tobereceived"
                android:textColor="@color/selector_myorder" />

            <TextView
                android:id="@+id/tvToBeComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_goods_text_bg"
                android:gravity="center"
                android:text="@string/my_tobecomment"
                android:textColor="@color/selector_myorder" />
        </LinearLayout>

        <com.lgh.huanglib.util.cusview.CustomViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>