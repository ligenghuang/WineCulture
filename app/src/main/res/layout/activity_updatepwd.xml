<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_title_black_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/icon_login_phone"
                    android:drawablePadding="20dp"
                    android:text="@string/login_num" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/updatepwd_numHint"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/color_15"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/text_size15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/color_fbefdc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/icon_login_pwd"
                    android:drawablePadding="20dp"
                    android:text="@string/register_newPwd" />

                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/updatepwd_newPwdHint"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/color_15"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/text_size15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/color_fbefdc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/icon_login_pwd"
                    android:drawablePadding="20dp"
                    android:text="@string/updatepwd_comfirmPwd" />

                <EditText
                    android:id="@+id/etConfirmPwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/updatepwd_comfirmPwdHint"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/color_15"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/text_size15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/color_fbefdc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/icon_register_auth_code"
                    android:drawablePadding="20dp"
                    android:text="@string/updatepwd_code" />

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/updatepwd_codeHint"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/color_15"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/text_size15" />

                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/updatepwd_getCode"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/color_fbefdc" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_login_btn"
                android:text="@string/updatepwd_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size15"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>